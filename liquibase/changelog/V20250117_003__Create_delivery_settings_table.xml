<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20250117-003" author="adalana">
        <comment>Create delivery_settings table for delivery fee calculation</comment>
        
        <createTable tableName="delivery_settings">
            <column name="id" type="UNIQUEIDENTIFIER" defaultValueComputed="NEWID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="price_per_km" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="max_delivery_radius_km" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="minimum_order_value" type="DECIMAL(10,2)"/>
            <column name="origin_address" type="NVARCHAR(MAX)"/>
            <column name="origin_latitude" type="FLOAT"/>
            <column name="origin_longitude" type="FLOAT"/>
            <column name="created_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()"/>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="delivery_settings" 
            baseColumnNames="account_id" 
            constraintName="fk_delivery_settings_account"
            referencedTableName="account" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <createIndex tableName="delivery_settings" indexName="idx_delivery_settings_account_id">
            <column name="account_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="delivery_settings"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

