<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20250119-007" author="adalana">
        <comment>Add CPF field to customer table</comment>

        <addColumn tableName="customer">
            <column name="cpf" type="VARCHAR(14)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Create index on CPF for faster lookups -->
        <createIndex tableName="customer" indexName="idx_customer_cpf">
            <column name="cpf"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="customer" indexName="idx_customer_cpf"/>
            <dropColumn tableName="customer" columnName="cpf"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

