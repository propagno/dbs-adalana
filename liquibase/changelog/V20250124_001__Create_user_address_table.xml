<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20250124-001" author="adalana">
        <comment>Create user_address table for user-level addresses (not tied to account)</comment>
        
        <createTable tableName="user_address">
            <column name="id" type="UNIQUEIDENTIFIER" defaultValueComputed="NEWID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="user_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"/>
            </column>
            
            <column name="label" type="NVARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="address" type="NVARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            
            <column name="is_default" type="BIT" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
            
            <column name="updated_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="user_address" 
            baseColumnNames="user_id" 
            constraintName="fk_user_address_user"
            referencedTableName="user" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <createIndex tableName="user_address" indexName="idx_user_address_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="user_address" indexName="idx_user_address_default">
            <column name="user_id"/>
            <column name="is_default"/>
        </createIndex>

        <rollback>
            <dropTable tableName="user_address"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

