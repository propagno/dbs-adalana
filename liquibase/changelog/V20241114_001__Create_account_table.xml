<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20241114-001" author="adalana">
        <comment>Create account table for multi-tenant isolation</comment>
        
        <createTable tableName="account">
            <column name="id" type="UNIQUEIDENTIFIER" defaultValueComputed="NEWID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)" defaultValue="BRL">
                <constraints nullable="false"/>
            </column>
            <column name="timezone" type="VARCHAR(50)" defaultValue="America/Sao_Paulo">
                <constraints nullable="false"/>
            </column>
            <column name="default_reminder_time" type="TIME" defaultValue="08:00:00">
                <constraints nullable="false"/>
            </column>
            <column name="settings" type="NVARCHAR(MAX)"/>
            <column name="created_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="account" indexName="idx_account_company_name">
            <column name="company_name"/>
        </createIndex>

        <rollback>
            <dropTable tableName="account"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
