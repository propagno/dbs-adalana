<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="V20250127_001__Create_webhook_event_table" author="system">
        <comment>Create webhook_event table for idempotency tracking</comment>

        <createTable tableName="webhook_event">
            <column name="id" type="uniqueidentifier">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_id" type="nvarchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="webhook_type" type="nvarchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="payload_hash" type="nvarchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="processed_at" type="datetime2">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="nvarchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="nvarchar(1000)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_webhook_event_id" tableName="webhook_event" unique="true">
            <column name="event_id"/>
        </createIndex>

        <createIndex indexName="idx_webhook_event_type" tableName="webhook_event">
            <column name="webhook_type"/>
        </createIndex>

        <createIndex indexName="idx_webhook_event_processed_at" tableName="webhook_event">
            <column name="processed_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

