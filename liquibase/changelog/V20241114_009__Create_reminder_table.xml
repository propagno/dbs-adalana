<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20241114-009" author="adalana">
        <comment>Create reminder table for notifications</comment>
        
        <createTable tableName="reminder">
            <column name="id" type="UNIQUEIDENTIFIER" defaultValueComputed="NEWID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"/>
            </column>
            <column name="target" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="target_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"/>
            </column>
            <column name="method" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="send_at" type="DATETIME2">
                <constraints nullable="false"/>
            </column>
            <column name="template_id" type="UNIQUEIDENTIFIER"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="payload" type="NVARCHAR(MAX)"/>
            <column name="sent_at" type="DATETIME2"/>
            <column name="error_message" type="NVARCHAR(500)"/>
            <column name="created_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="reminder" 
            baseColumnNames="account_id" 
            constraintName="fk_reminder_account"
            referencedTableName="account" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint 
            baseTableName="reminder" 
            baseColumnNames="template_id" 
            constraintName="fk_reminder_template"
            referencedTableName="template" 
            referencedColumnNames="id"/>

        <createIndex tableName="reminder" indexName="idx_reminder_account_id">
            <column name="account_id"/>
        </createIndex>

        <createIndex tableName="reminder" indexName="idx_reminder_send_at_status">
            <column name="send_at"/>
            <column name="status"/>
        </createIndex>

        <createIndex tableName="reminder" indexName="idx_reminder_target">
            <column name="target"/>
            <column name="target_id"/>
        </createIndex>

        <sql>
            ALTER TABLE reminder ADD CONSTRAINT ck_reminder_target 
            CHECK (target IN ('order', 'subscription', 'customer'));

            ALTER TABLE reminder ADD CONSTRAINT ck_reminder_method 
            CHECK (method IN ('whatsapp', 'sms', 'email'));

            ALTER TABLE reminder ADD CONSTRAINT ck_reminder_status 
            CHECK (status IN ('scheduled', 'sent', 'failed', 'cancelled'));
        </sql>

        <rollback>
            <dropTable tableName="reminder"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
