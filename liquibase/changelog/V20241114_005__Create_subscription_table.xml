<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20241114-005" author="adalana">
        <comment>Create subscription table for active subscriptions</comment>
        
        <createTable tableName="subscription">
            <column name="id" type="UNIQUEIDENTIFIER" defaultValueComputed="NEWID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="interval" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="custom_interval_days" type="INT"/>
            <column name="next_delivery" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT" defaultValueNumeric="1">
                <constraints nullable="false"/>
            </column>
            <column name="pause_reason" type="NVARCHAR(500)"/>
            <column name="paused_at" type="DATETIME2"/>
            <column name="paused_until" type="DATE"/>
            <column name="metadata" type="NVARCHAR(MAX)"/>
            <column name="created_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME2" defaultValueComputed="GETUTCDATE()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="subscription" 
            baseColumnNames="account_id" 
            constraintName="fk_subscription_account"
            referencedTableName="account" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint 
            baseTableName="subscription" 
            baseColumnNames="customer_id" 
            constraintName="fk_subscription_customer"
            referencedTableName="customer" 
            referencedColumnNames="id"/>

        <addForeignKeyConstraint 
            baseTableName="subscription" 
            baseColumnNames="product_id" 
            constraintName="fk_subscription_product"
            referencedTableName="product" 
            referencedColumnNames="id"/>

        <createIndex tableName="subscription" indexName="idx_subscription_account_id">
            <column name="account_id"/>
        </createIndex>

        <createIndex tableName="subscription" indexName="idx_subscription_customer_id">
            <column name="customer_id"/>
        </createIndex>

        <createIndex tableName="subscription" indexName="idx_subscription_product_id">
            <column name="product_id"/>
        </createIndex>

        <createIndex tableName="subscription" indexName="idx_subscription_next_delivery">
            <column name="next_delivery"/>
        </createIndex>

        <createIndex tableName="subscription" indexName="idx_subscription_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="subscription" indexName="idx_subscription_next_delivery_status">
            <column name="account_id"/>
            <column name="next_delivery"/>
            <column name="status"/>
        </createIndex>

        <sql>
            ALTER TABLE subscription ADD CONSTRAINT ck_subscription_status 
            CHECK (status IN ('active', 'paused', 'cancelled'));

            ALTER TABLE subscription ADD CONSTRAINT ck_subscription_interval 
            CHECK (interval IN ('daily', 'weekly', 'biweekly', 'monthly', 'quarterly', 'custom'));

            ALTER TABLE subscription ADD CONSTRAINT ck_subscription_custom_interval 
            CHECK ((interval = 'custom' AND custom_interval_days IS NOT NULL) OR 
                   (interval != 'custom' AND custom_interval_days IS NULL));
        </sql>

        <rollback>
            <dropTable tableName="subscription"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
