<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="add-email-verified-user" author="adalana">
        <addColumn tableName="user">
            <column name="email_verified" type="BIT" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="email_verified_at" type="DATETIME"/>
        </addColumn>
        
        <createIndex tableName="user" indexName="idx_user_email_verified">
            <column name="email_verified"/>
        </createIndex>
    </changeSet>
    
    <!-- Mark existing users as verified to avoid breaking existing functionality -->
    <changeSet id="mark-existing-users-verified" author="adalana">
        <update tableName="user">
            <column name="email_verified" valueBoolean="true"/>
            <column name="email_verified_at" valueComputed="GETDATE()"/>
        </update>
    </changeSet>
    
</databaseChangeLog>

